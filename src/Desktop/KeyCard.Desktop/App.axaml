<Application
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:infra="clr-namespace:KeyCard.Desktop.Infrastructure"
    x:Class="KeyCard.Desktop.App"
    RequestedThemeVariant="Dark">
  <Application.DataTemplates>
    <infra:ViewLocator/>
  </Application.DataTemplates>
  <Application.Styles>
    <FluentTheme/>
    <Style Selector="TextBox, Button">
      <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>
    <Style Selector="Border.login-card">
      <Setter Property="CornerRadius" Value="14"/>
      <Setter Property="Padding" Value="28"/>
      <Setter Property="Background" Value="#1E1E1E"/>
      <Setter Property="BorderBrush" Value="#7B1FA2"/>
      <Setter Property="BorderThickness" Value="2"/>
      <Setter Property="Effect">
        <Setter.Value>
          <DropShadowEffect BlurRadius="24" Opacity="0.35"/>
        </Setter.Value>
      </Setter>
    </Style>
  </Application.Styles>
</Application>
