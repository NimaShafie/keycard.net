<!-- src/Desktop/KeyCard.Desktop/App.axaml -->
<Application
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:infra="clr-namespace:KeyCard.Desktop.Infrastructure"
    x:Class="KeyCard.Desktop.App"
    RequestedThemeVariant="Dark">

  <!-- You are using a ViewLocator; kept as-is -->
  <Application.DataTemplates>
    <infra:ViewLocator/>
  </Application.DataTemplates>

  <Application.Styles>
    <FluentTheme/>
    <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>

    <!-- Your shared spacing (kept) -->
    <Style Selector="TextBox, Button">
      <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <!-- NEW: globally fix button and textbox visuals (centered text, padding, rounded) -->
    <Style Selector="Button">
      <Setter Property="Height" Value="36"/>
      <Setter Property="Padding" Value="16,8"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="CornerRadius" Value="8"/>
    </Style>

    <Style Selector="TextBox">
      <Setter Property="Height" Value="36"/>
      <Setter Property="Padding" Value="12,6"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
      <Setter Property="CornerRadius" Value="6"/>
    </Style>

    <!-- Optional: DataGrid row height consistency -->
    <Style Selector="DataGridRow">
      <Setter Property="Height" Value="36"/>
      <Setter Property="MinHeight" Value="36"/>
    </Style>

    <!-- Small helper so indeterminate ProgressBars look tidy in headers (kept) -->
    <Style Selector="ProgressBar:indeterminate">
      <Setter Property="MinWidth" Value="80"/>
      <Setter Property="Height" Value="6"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Login card styling (kept) -->
    <Style Selector="Border.login-card">
      <Setter Property="CornerRadius" Value="14"/>
      <Setter Property="Padding" Value="28"/>
      <Setter Property="Background" Value="#1E1E1E"/>
      <Setter Property="BorderBrush" Value="#7B1FA2"/>
      <Setter Property="BorderThickness" Value="2"/>
      <Setter Property="Effect">
        <Setter.Value>
          <DropShadowEffect BlurRadius="24" Opacity="0.35"/>
        </Setter.Value>
      </Setter>
    </Style>
  </Application.Styles>
</Application>
