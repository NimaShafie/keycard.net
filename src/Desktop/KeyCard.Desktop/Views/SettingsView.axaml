<!-- src/Desktop/KeyCard.Desktop/Views/SettingsView.axaml -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="KeyCard.Desktop.Views.SettingsView">
  <StackPanel Margin="16" Spacing="6">
    <TextBlock Text="Settings" FontSize="18" FontWeight="Bold"/>
    <CheckBox Content="Use mock data" IsChecked="True"/>
    <CheckBox Content="Enable sounds" IsChecked="False"/>
  </StackPanel>
</UserControl>
