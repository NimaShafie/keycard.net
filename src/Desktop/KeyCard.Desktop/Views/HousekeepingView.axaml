<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vms="clr-namespace:KeyCard.Desktop.ViewModels"
    x:Class="KeyCard.Desktop.Views.HousekeepingView"
    x:DataType="vms:HousekeepingViewModel">

	<Grid Margin="20" ColumnDefinitions="*,*" RowDefinitions="Auto,*">
		<TextBlock Grid.ColumnSpan="2" Text="Housekeeping" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>

		<StackPanel Grid.Row="1" Grid.Column="0" Spacing="6">
			<TextBlock Text="Rooms" FontWeight="SemiBold"/>
			<ListBox ItemsSource="{Binding Rooms}" SelectedItem="{Binding SelectedRoom}"/>
			<StackPanel Orientation="Horizontal" Spacing="8">
				<Button Content="Mark Clean" Command="{Binding MarkRoomCleanCommand}"/>
				<Button Content="Refresh" Command="{Binding RefreshCommand}"/>
			</StackPanel>
		</StackPanel>

		<StackPanel Grid.Row="1" Grid.Column="1" Spacing="6">
			<TextBlock Text="Tasks" FontWeight="SemiBold"/>
			<ListBox ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}"/>
			<StackPanel Orientation="Horizontal" Spacing="8">
				<Button Content="Mark Done" Command="{Binding MarkTaskDoneCommand}"/>
				<Button Content="Refresh" Command="{Binding RefreshCommand}"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>
