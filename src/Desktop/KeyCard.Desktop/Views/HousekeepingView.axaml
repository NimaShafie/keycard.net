<!-- Views/HousekeepingView.axaml -->
<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vms="clr-namespace:KeyCard.Desktop.ViewModels"
    xmlns:conv="clr-namespace:KeyCard.Desktop.Converters"
    x:Class="KeyCard.Desktop.Views.HousekeepingView"
    x:DataType="vms:HousekeepingViewModel"
    x:Name="Root">

  <UserControl.Resources>
    <conv:BoolNotConverter x:Key="BoolNot"/>
    <conv:StringHasTextConverter x:Key="HasText"/>
  </UserControl.Resources>

  <UserControl.KeyBindings>
    <KeyBinding Gesture="F5" Command="{Binding RefreshCommand}"/>
  </UserControl.KeyBindings>

  <Grid RowDefinitions="Auto,*" Margin="8">

    <!-- Header with DEBUG STATUS -->
    <Border Grid.Row="0"
            CornerRadius="10"
            BorderBrush="#3F2F73"
            BorderThickness="1"
            Padding="16,12"
            Margin="0,0,0,8"
            Background="#1B1B22">
      <Grid ColumnDefinitions="*,Auto">
        <StackPanel>
          <TextBlock Text="Housekeeping Management"
                     FontWeight="SemiBold"
                     FontSize="18"
                     Foreground="#E8E8F0"/>
          <!-- DEBUG STATUS - RED AND VISIBLE -->
          <TextBlock FontSize="13"
                     FontWeight="Bold"
                     Foreground="#FF4444"
                     Margin="0,4,0,0"
                     Text="{Binding StatusMessage}"/>
        </StackPanel>

        <TextBlock Grid.Column="1"
                   VerticalAlignment="Center"
                   FontSize="12"
                   Foreground="#4CAF50"
                   FontWeight="Bold"
                   Text="{Binding SyncMessage}"/>
      </Grid>
    </Border>

    <!-- Tabbed Content -->
    <TabControl Grid.Row="1"
                Background="#141419"
                BorderBrush="#4B3A86"
                BorderThickness="1"
                CornerRadius="8"
                Padding="0">

      <!-- Tab 1: Rooms & Tasks Overview -->
      <TabItem Header="Rooms &amp; Tasks">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <Grid RowDefinitions="Auto,Auto" Margin="12"
                x:DataType="vms:HousekeepingViewModel">

            <!-- Rooms Section -->
            <Border Grid.Row="0"
                    CornerRadius="8"
                    BorderBrush="#3F2F73"
                    BorderThickness="1"
                    Padding="12"
                    Margin="0,0,0,12"
                    Background="#18181E">
              <Grid RowDefinitions="Auto,*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                  <TextBlock Text="Rooms"
                             FontWeight="SemiBold"
                             FontSize="14"
                             Foreground="#E8E8F0"/>
                  <TextBlock FontSize="14" Opacity="0.7" VerticalAlignment="Center">
                    <Run Text="("/>
                    <Run Text="{Binding Rooms.Count}"/>
                    <Run Text=")"/>
                  </TextBlock>
                </StackPanel>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Rooms}"
                          SelectedItem="{Binding SelectedRoom}"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="All"
                          CanUserSortColumns="True"
                          CanUserResizeColumns="True"
                          IsReadOnly="True"
                          RowHeight="36"
                          MaxHeight="300"
                          Background="#141419">
                  <DataGrid.Columns>
                    <DataGridTextColumn Header="Room #"
                                        Width="*"
                                        Binding="{Binding Number}"/>
                    <DataGridTextColumn Header="Status"
                                        Width="2*"
                                        Binding="{Binding Status}"/>
                    <DataGridCheckBoxColumn Header="Clean"
                                            Width="*"
                                            Binding="{Binding IsClean, Mode=OneWay}"
                                            IsReadOnly="True"/>
                  </DataGrid.Columns>
                </DataGrid>

                <Button Grid.Row="2"
                        Content="Mark Room Clean"
                        Command="{Binding MarkRoomCleanCommand}"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Left"
                        Padding="16,8"
                        CornerRadius="6"/>
              </Grid>
            </Border>

            <!-- Tasks Section -->
            <Border Grid.Row="1"
                    CornerRadius="8"
                    BorderBrush="#3F2F73"
                    BorderThickness="1"
                    Padding="12"
                    Background="#18181E">
              <Grid RowDefinitions="Auto,*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                  <TextBlock Text="Tasks"
                             FontWeight="SemiBold"
                             FontSize="14"
                             Foreground="#E8E8F0"/>
                  <TextBlock FontSize="14" Opacity="0.7" VerticalAlignment="Center">
                    <Run Text="("/>
                    <Run Text="{Binding Tasks.Count}"/>
                    <Run Text=")"/>
                  </TextBlock>
                </StackPanel>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Tasks}"
                          SelectedItem="{Binding SelectedTask}"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="All"
                          CanUserSortColumns="True"
                          CanUserResizeColumns="True"
                          IsReadOnly="True"
                          RowHeight="36"
                          MaxHeight="300"
                          Background="#141419">
                  <DataGrid.Columns>
                    <DataGridTextColumn Header="Description"
                                        Width="3*"
                                        Binding="{Binding Description}"/>
                    <DataGridTextColumn Header="Status"
                                        Width="*"
                                        Binding="{Binding Status}"/>
                    <DataGridCheckBoxColumn Header="Done"
                                            Width="*"
                                            Binding="{Binding IsCompleted, Mode=OneWay}"
                                            IsReadOnly="True"/>
                  </DataGrid.Columns>
                </DataGrid>

                <Button Grid.Row="2"
                        Content="Mark Task Complete"
                        Command="{Binding MarkTaskDoneCommand}"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Left"
                        Padding="16,8"
                        CornerRadius="6"/>
              </Grid>
            </Border>
          </Grid>
        </ScrollViewer>
      </TabItem>

      <!-- Tab 2: Kanban Board with Drag-Drop -->
      <TabItem Header="Kanban Board" x:Name="KanbanTab">
        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
          <Grid ColumnDefinitions="*,*,*" Margin="12"
                x:DataType="vms:HousekeepingViewModel">

            <!-- Pending Column -->
            <Border Grid.Column="0"
                    x:Name="PendingColumn"
                    CornerRadius="8"
                    BorderBrush="#3F2F73"
                    BorderThickness="1"
                    Padding="12"
                    Background="#18181E"
                    Margin="0,0,6,0">
              <Grid RowDefinitions="Auto,Auto,*">
                <TextBlock Grid.Row="0"
                           Text="Pending"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="#E8E8F0"
                           Margin="0,0,0,8"/>

                <TextBlock Grid.Row="1" FontSize="12" Opacity="0.7" Margin="0,0,0,8">
                  <Run Text="{Binding Kanban.Pending.Count}"/>
                  <Run Text=" tasks"/>
                </TextBlock>

                <ListBox Grid.Row="2"
                         x:Name="PendingList"
                         ItemsSource="{Binding Kanban.PendingView}"
                         Background="Transparent"
                         BorderThickness="0">
                  <ListBox.ItemTemplate>
                    <DataTemplate x:CompileBindings="False">
                      <Border CornerRadius="6"
                              Padding="10"
                              Margin="0,0,0,8"
                              Background="#2A2A33"
                              BorderBrush="#5C46A3"
                              BorderThickness="1">
                        <StackPanel Spacing="6">
                          <TextBlock Text="{Binding Title}"
                                     FontWeight="SemiBold"
                                     TextWrapping="Wrap"/>
                          <TextBlock FontSize="12" Opacity="0.7">
                            <Run Text="Room "/>
                            <Run Text="{Binding RoomId}"/>
                          </TextBlock>
                          <TextBlock Text="{Binding Notes}"
                                     FontSize="11"
                                     Opacity="0.6"
                                     TextWrapping="Wrap"
                                     IsVisible="{Binding Notes, Converter={StaticResource HasText}}"/>
                          <StackPanel Orientation="Horizontal" Spacing="6">
                            <ComboBox
                                ItemsSource="{Binding $parent[ListBox].((vms:HousekeepingViewModel)DataContext).Kanban.StaffOptions}"
                                SelectedItem="{Binding AssignedTo, Mode=TwoWay}"
                                SelectionChanged="OnStaffAssignmentChanged"
                                Tag="{Binding}"
                                FontSize="11"
                                Width="140"
                                HorizontalAlignment="Left"/>
                            <Button Content="Save"
                                    FontSize="11"
                                    Padding="8,4"
                                    Command="{Binding $parent[ListBox].((vms:HousekeepingViewModel)DataContext).Kanban.AssignAttendantCommand}"
                                    CommandParameter="{Binding}"/>
                          </StackPanel>
                        </StackPanel>
                      </Border>
                    </DataTemplate>
                  </ListBox.ItemTemplate>
                </ListBox>
              </Grid>
            </Border>

            <!-- In Progress Column -->
            <Border Grid.Column="1"
                    x:Name="InProgressColumn"
                    CornerRadius="8"
                    BorderBrush="#3F2F73"
                    BorderThickness="1"
                    Padding="12"
                    Background="#18181E"
                    Margin="6,0,6,0">
              <Grid RowDefinitions="Auto,Auto,*">
                <TextBlock Grid.Row="0"
                           Text="In Progress"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="#E8E8F0"
                           Margin="0,0,0,8"/>

                <TextBlock Grid.Row="1" FontSize="12" Opacity="0.7" Margin="0,0,0,8">
                  <Run Text="{Binding Kanban.InProgress.Count}"/>
                  <Run Text=" tasks"/>
                </TextBlock>

                <ListBox Grid.Row="2"
                         x:Name="InProgressList"
                         ItemsSource="{Binding Kanban.InProgressView}"
                         Background="Transparent"
                         BorderThickness="0">
                  <ListBox.ItemTemplate>
                    <DataTemplate x:CompileBindings="False">
                      <Border CornerRadius="6"
                              Padding="10"
                              Margin="0,0,0,8"
                              Background="#2A2A33"
                              BorderBrush="#7B1FA2"
                              BorderThickness="1">
                        <StackPanel Spacing="6">
                          <TextBlock Text="{Binding Title}"
                                     FontWeight="SemiBold"
                                     TextWrapping="Wrap"/>
                          <TextBlock FontSize="12" Opacity="0.7">
                            <Run Text="Room "/>
                            <Run Text="{Binding RoomId}"/>
                          </TextBlock>
                          <TextBlock Text="{Binding Notes}"
                                     FontSize="11"
                                     Opacity="0.6"
                                     TextWrapping="Wrap"
                                     IsVisible="{Binding Notes, Converter={StaticResource HasText}}"/>
                          <TextBlock FontSize="11" Opacity="0.8">
                            <Run Text="Assigned: "/>
                            <Run Text="{Binding AssignedTo}"/>
                          </TextBlock>
                        </StackPanel>
                      </Border>
                    </DataTemplate>
                  </ListBox.ItemTemplate>
                </ListBox>
              </Grid>
            </Border>

            <!-- Completed Column -->
            <Border Grid.Column="2"
                    x:Name="CompletedColumn"
                    CornerRadius="8"
                    BorderBrush="#3F2F73"
                    BorderThickness="1"
                    Padding="12"
                    Background="#18181E"
                    Margin="6,0,0,0">
              <Grid RowDefinitions="Auto,Auto,*">
                <TextBlock Grid.Row="0"
                           Text="Completed"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="#E8E8F0"
                           Margin="0,0,0,8"/>

                <TextBlock Grid.Row="1" FontSize="12" Opacity="0.7" Margin="0,0,0,8">
                  <Run Text="{Binding Kanban.Completed.Count}"/>
                  <Run Text=" tasks"/>
                </TextBlock>

                <ListBox Grid.Row="2"
                         x:Name="CompletedList"
                         ItemsSource="{Binding Kanban.CompletedView}"
                         Background="Transparent"
                         BorderThickness="0">
                  <ListBox.ItemTemplate>
                    <DataTemplate x:CompileBindings="False">
                      <Border CornerRadius="6"
                              Padding="10"
                              Margin="0,0,0,8"
                              Background="#2A2A33"
                              BorderBrush="#4CAF50"
                              BorderThickness="1"
                              Opacity="0.7">
                        <StackPanel Spacing="6">
                          <TextBlock Text="{Binding Title}"
                                     FontWeight="SemiBold"
                                     TextWrapping="Wrap"
                                     TextDecorations="Strikethrough"/>
                          <TextBlock FontSize="12" Opacity="0.7">
                            <Run Text="Room "/>
                            <Run Text="{Binding RoomId}"/>
                          </TextBlock>
                          <TextBlock FontSize="11" Opacity="0.8">
                            <Run Text="By: "/>
                            <Run Text="{Binding AssignedTo}"/>
                          </TextBlock>
                        </StackPanel>
                      </Border>
                    </DataTemplate>
                  </ListBox.ItemTemplate>
                </ListBox>
              </Grid>
            </Border>

          </Grid>
        </ScrollViewer>
      </TabItem>
    </TabControl>
  </Grid>
</UserControl>
