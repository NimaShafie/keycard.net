<!-- src/Desktop/KeyCard.Desktop/Views/LoginView.axaml -->
<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vms="clr-namespace:KeyCard.Desktop.ViewModels"
    x:Class="KeyCard.Desktop.Views.LoginView"
    x:DataType="vms:LoginViewModel">

  <!-- add a 5th row -->
  <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,*"
        HorizontalAlignment="Center" VerticalAlignment="Center" Width="520">

    <TextBlock Grid.ColumnSpan="2" Text="KeyCard.NET" FontSize="24" FontWeight="Bold"
               HorizontalAlignment="Center" Margin="0,0,0,20"/>

    <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Text="Staff Login"
               FontSize="16" FontWeight="SemiBold"
               HorizontalAlignment="Center" Margin="0,0,0,12"/>

    <TextBox Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,8"
             Watermark="Username" Text="{Binding Username}" />

    <TextBox Grid.Row="3" Grid.ColumnSpan="2" Margin="0,0,0,20"
             Watermark="Password" PasswordChar="•" Text="{Binding Password}" />

    <!-- stays in row 4 (now a real row), won’t overlap -->
    <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal"
                HorizontalAlignment="Center" Spacing="8">
      <Button Content="Sign in" IsDefault="True"
              Command="{Binding LoginCommand}"/>
      <Button Content="Mock Mode"
              IsVisible="{Binding IsMockMode}"
              Command="{Binding ContinueMockCommand}"/>
    </StackPanel>
  </Grid>
</UserControl>
