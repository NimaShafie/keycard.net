<!-- Views/ProfileView.axaml -->
<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vms="clr-namespace:KeyCard.Desktop.ViewModels"
    x:Class="KeyCard.Desktop.Views.ProfileView"
    x:DataType="vms:ProfileViewModel">

  <StackPanel Spacing="24" MinWidth="500">

    <!-- Profile Header -->
    <StackPanel Spacing="16" HorizontalAlignment="Center">
      <Border Width="80" Height="80"
              CornerRadius="40"
              Background="#7B1FA2"
              BorderBrush="#9C27B0"
              BorderThickness="3">
        <Viewbox Width="40" Height="40">
          <TextBlock Text="ðŸ‘¤"
                     FontSize="32"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
        </Viewbox>
      </Border>
      <TextBlock Text="{Binding Name}"
                 FontSize="22"
                 FontWeight="SemiBold"
                 HorizontalAlignment="Center"/>
      <TextBlock Text="{Binding Role}"
                 FontSize="14"
                 Opacity="0.8"
                 HorizontalAlignment="Center"/>
    </StackPanel>

    <Separator Background="#3F2F73"/>

    <!-- Profile Details -->
    <StackPanel Spacing="16">
      <TextBlock Text="Account Information"
                 FontSize="16"
                 FontWeight="SemiBold"
                 Foreground="#7B1FA2"/>

      <Border Background="#2A2A33"
              BorderBrush="#3F2F73"
              BorderThickness="1"
              CornerRadius="8"
              Padding="16">
        <StackPanel Spacing="12">
          <Grid ColumnDefinitions="120,*">
            <TextBlock Text="Name:" Opacity="0.7"/>
            <TextBlock Grid.Column="1" Text="{Binding Name}" FontWeight="SemiBold"/>
          </Grid>

          <Grid ColumnDefinitions="120,*">
            <TextBlock Text="Role:" Opacity="0.7"/>
            <TextBlock Grid.Column="1" Text="{Binding Role}"/>
          </Grid>

          <Grid ColumnDefinitions="120,*">
            <TextBlock Text="Mode:" Opacity="0.7"/>
            <TextBlock Grid.Column="1" Text="{Binding Mode}"/>
          </Grid>

          <Grid ColumnDefinitions="120,*">
            <TextBlock Text="API Endpoint:" Opacity="0.7"/>
            <TextBlock Grid.Column="1"
                       Text="{Binding ApiEndpoint}"
                       TextWrapping="Wrap"
                       Opacity="0.8"/>
          </Grid>
        </StackPanel>
      </Border>
    </StackPanel>

    <!-- Note -->
    <Border Background="#2B2B33"
            BorderBrush="#7B1FA2"
            BorderThickness="1"
            CornerRadius="6"
            Padding="12"
            Margin="0,8,0,0">
      <TextBlock Text="This is a read-only profile view. User management features are not available in this prototype."
                 FontSize="11"
                 Opacity="0.8"
                 TextWrapping="Wrap"
                 TextAlignment="Center"/>
    </Border>
  </StackPanel>
</UserControl>
