<!-- Views/FrontDeskView.axaml -->
<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vms="clr-namespace:KeyCard.Desktop.ViewModels"
    xmlns:vctrl="clr-namespace:KeyCard.Desktop.Views.Controls"
    xmlns:conv="clr-namespace:KeyCard.Desktop.Converters"
    x:Class="KeyCard.Desktop.Views.FrontDeskView"
    x:DataType="vms:FrontDeskViewModel">

  <!-- Keyboard shortcuts -->
  <UserControl.KeyBindings>
    <!-- F5 refresh -->
    <KeyBinding Gesture="F5" Command="{Binding RefreshCommand}"/>
  </UserControl.KeyBindings>

  <UserControl.Resources>
    <conv:NamePartConverter x:Key="NamePartConverter"/>
    <conv:RoomTypeConverter x:Key="RoomTypeConverter"/>
    <!-- NEW: for colored status badges -->
    <conv:StatusBrushConverter x:Key="StatusBrushConverter"/>
  </UserControl.Resources>

  <Grid RowDefinitions="Auto,Auto,*,Auto">
    <!-- Header -->
    <vctrl:ViewHeader Grid.Row="0"
                      HeaderText="Front Desk Operations"
                      SubHeaderText="Manage arrivals, departures, and check-ins"/>

    <!-- Toolbar -->
    <Border Grid.Row="1" Margin="8" CornerRadius="10"
            BorderBrush="#3F2F73" BorderThickness="1" Padding="12">
      <Grid ColumnDefinitions="*,12,Auto">
        <!-- Search (duplicate of shared TopBar) -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" IsVisible="False">
          <!-- HIDDEN: shared TopBar handles search/refresh -->
          <TextBox x:Name="SearchBox"
                   Width="300"
                   Watermark="Search by booking ID, name, or confirmation code"
                   Text="{Binding SearchText}"/>
          <Button Content="Search"
                  Command="{Binding SearchCommand}"
                  IsEnabled="{Binding !IsBusy}"/>
          <Button Content="Refresh"
                  Command="{Binding RefreshCommand}"
                  IsEnabled="{Binding !IsBusy}"/>
        </StackPanel>

        <!-- 12px spacer is Column 1 -->

        <!-- Status indicator + Back (kept) -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
          <ProgressBar IsIndeterminate="True"
                       IsVisible="{Binding IsBusy}"
                       Width="100"/>
          <Button Content="â† Back"
                  Command="{Binding BackToDashboardCommand}"/>
        </StackPanel>
      </Grid>
    </Border>

    <!-- Main content -->
    <Grid Grid.Row="2" Margin="8" ColumnDefinitions="11*,12,4*">
      <!-- Bookings list -->
      <Border Grid.Column="0"
              Background="#141419"
              BorderBrush="#4B3A86"
              BorderThickness="1"
              CornerRadius="8"
              Padding="8">
        <Grid RowDefinitions="Auto,8,*">
          <TextBlock Text="Today's Activity"
                     FontSize="16"
                     FontWeight="SemiBold"/>

          <DataGrid Grid.Row="2"
              ItemsSource="{Binding Results}"
              SelectedItem="{Binding Selected, Mode=TwoWay}"
              AutoGenerateColumns="False"
              HeadersVisibility="Column"
              GridLinesVisibility="All"
              CanUserSortColumns="True"
              CanUserResizeColumns="True"
              CanUserReorderColumns="True"
              IsReadOnly="True"
              RowHeight="36"
              Background="#141419">

            <DataGrid.Columns>
              <DataGridTextColumn Header="Confirmation" Width="*"
                                  Binding="{Binding ConfirmationCode}"
                                  SortMemberPath="ConfirmationCode"/>

              <!-- Split guest into First/Last -->
              <DataGridTextColumn Header="First" Width="*"
                                  Binding="{Binding GuestName, Converter={StaticResource NamePartConverter}, ConverterParameter=First}"
                                  SortMemberPath="GuestName"/>
              <DataGridTextColumn Header="Last" Width="*"
                                  Binding="{Binding GuestName, Converter={StaticResource NamePartConverter}, ConverterParameter=Last}"
                                  SortMemberPath="GuestName"/>

              <DataGridTextColumn Header="Room" Width="*"
                                  Binding="{Binding RoomNumber}"
                                  SortMemberPath="RoomNumber"/>

              <!-- New: Room Type -->
              <DataGridTextColumn Header="Room Type" Width="*"
                                  Binding="{Binding RoomNumber, Converter={StaticResource RoomTypeConverter}}"
                                  SortMemberPath="RoomNumber"/>

              <DataGridTextColumn Header="Check-In" Width="*"
                                  Binding="{Binding CheckIn}"
                                  SortMemberPath="CheckIn"/>
              <DataGridTextColumn Header="Check-Out" Width="*"
                                  Binding="{Binding CheckOut}"
                                  SortMemberPath="CheckOut"/>

              <!-- NEW: colored badge for Status -->
              <DataGridTemplateColumn Header="Status" Width="*">
                <DataGridTemplateColumn.CellTemplate>
                  <DataTemplate>
                    <Border CornerRadius="12"
                            Padding="6,2"
                            HorizontalAlignment="Center"
                            Background="{Binding Status, Converter={StaticResource StatusBrushConverter}, ConverterParameter=bg}">
                      <TextBlock Text="{Binding Status}"
                                 FontSize="12"
                                 Foreground="{Binding Status, Converter={StaticResource StatusBrushConverter}, ConverterParameter=fg}"/>
                    </Border>
                  </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
              </DataGridTemplateColumn>
            </DataGrid.Columns>
          </DataGrid>
        </Grid>
      </Border>

      <!-- Column 1 is the 12px spacer -->

      <!-- Actions panel -->
      <Border Grid.Column="2"
              Background="#141419"
              BorderBrush="#4B3A86"
              BorderThickness="1"
              CornerRadius="8"
              Padding="16">
        <StackPanel Spacing="16">
          <TextBlock Text="Booking Actions"
                     FontSize="16"
                     FontWeight="SemiBold"/>

          <!-- Selected booking info -->
          <Border BorderBrush="#3F2F73"
                  BorderThickness="1"
                  CornerRadius="6"
                  Padding="12"
                  IsVisible="{Binding Selected, Converter={x:Static ObjectConverters.IsNotNull}}">
            <StackPanel Spacing="6">
              <TextBlock Text="{Binding Selected.GuestName}"
                         FontWeight="SemiBold"
                         FontSize="14"/>
              <TextBlock Text="{Binding Selected.ConfirmationCode, StringFormat='Code: {0}'}"
                         Opacity="0.8"
                         FontSize="12"/>
              <TextBlock Text="{Binding Selected.RoomNumber, StringFormat='Room: {0}'}"
                         Opacity="0.8"
                         FontSize="12"/>
              <TextBlock Text="{Binding Selected.Status, StringFormat='Status: {0}'}"
                         Opacity="0.8"
                         FontSize="12"/>
            </StackPanel>
          </Border>

          <!-- Room assignment -->
          <StackPanel Spacing="8">
            <TextBlock Text="Assign Room" FontWeight="SemiBold"/>
            <TextBox Watermark="Room number"
                     Text="{Binding RoomNumberInput}"
                     IsEnabled="{Binding !IsBusy}"/>
            <!-- Inline error from duplicate/conflict validation -->
            <TextBlock Text="{Binding AssignRoomError}"
                       Foreground="#ff7777"
                       FontSize="12"
                       IsVisible="{Binding AssignRoomError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
            <Button Content="Assign Room"
                    Command="{Binding AssignRoomCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"/>
          </StackPanel>

          <Separator Background="#3F2F73"/>

          <!-- Check-in/out buttons -->
          <StackPanel Spacing="10">
            <Button Content="Check In Guest"
                    Command="{Binding CheckInCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="#2E7D32"
                    BorderBrush="#4CAF50"/>

            <Button Content="Check Out Guest"
                    Command="{Binding CheckOutCommand}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="#D32F2F"
                    BorderBrush="#F44336"/>
          </StackPanel>

          <TextBlock Text="Additional actions coming soon..."
                     Opacity="0.5"
                     FontSize="11"
                     TextAlignment="Center"
                     Margin="0,16,0,0"/>
        </StackPanel>
      </Border>
    </Grid>

    <!-- Status bar -->
    <Border Grid.Row="3"
            Background="#1E1F29"
            BorderBrush="#3F2F73"
            BorderThickness="0,1,0,0"
            Padding="12,8">
      <TextBlock Text="{Binding StatusMessage}"
                 Opacity="0.9"
                 IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
    </Border>
  </Grid>
</UserControl>
