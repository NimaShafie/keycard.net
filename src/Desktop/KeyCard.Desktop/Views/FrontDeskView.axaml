<!-- Views/FrontDeskView.axaml -->
<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vms="clr-namespace:KeyCard.Desktop.ViewModels"
    xmlns:conv="clr-namespace:KeyCard.Desktop.Converters"
    x:Class="KeyCard.Desktop.Views.FrontDeskView"
    x:DataType="vms:FrontDeskViewModel">

  <UserControl.KeyBindings>
    <KeyBinding Gesture="F5" Command="{Binding RefreshCommand}"/>
  </UserControl.KeyBindings>

  <UserControl.Resources>
    <conv:NamePartConverter x:Key="NamePartConverter"/>
    <conv:RoomTypeConverter x:Key="RoomTypeConverter"/>
    <conv:StatusBrushConverter x:Key="StatusBrushConverter"/>
    <conv:StringHasTextConverter x:Key="HasText"/>
  </UserControl.Resources>

  <Grid RowDefinitions="Auto,*" Margin="8">

    <!-- Header -->
    <Border Grid.Row="0"
            CornerRadius="10"
            BorderBrush="#3F2F73"
            BorderThickness="1"
            Padding="16,12"
            Margin="0,0,0,8"
            Background="#1B1B22">
      <Grid ColumnDefinitions="*,Auto">
        <StackPanel>
          <TextBlock Text="Front Desk Operations"
                     FontWeight="SemiBold"
                     FontSize="18"
                     Foreground="#E8E8F0"/>
          <TextBlock Text="Manage arrivals, departures, and check-ins"
                     FontSize="12"
                     Opacity="0.7"
                     Foreground="#CFCFEA"
                     Margin="0,2,0,0"/>
        </StackPanel>

        <TextBlock Grid.Column="1"
                   Text="Loaded mock data"
                   VerticalAlignment="Center"
                   FontSize="12"
                   Foreground="#9C27B0"
                   IsVisible="{Binding IsMockMode}"/>
      </Grid>
    </Border>

    <!-- Main content -->
    <Grid Grid.Row="1" ColumnDefinitions="11*,12,4*">
      <!-- Bookings list -->
      <Border Grid.Column="0"
              CornerRadius="8"
              BorderBrush="#3F2F73"
              BorderThickness="1"
              Padding="12"
              Background="#18181E"
              PointerPressed="OnBookingsAreaClicked">
        <Grid RowDefinitions="Auto,*">
          <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
            <TextBlock Text="Today's Activity"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Foreground="#E8E8F0"/>
            <TextBlock FontSize="14" Opacity="0.7" VerticalAlignment="Center">
              <Run Text="("/>
              <Run Text="{Binding Results.Count}"/>
              <Run Text=")"/>
            </TextBlock>
          </StackPanel>

          <Border Grid.Row="1"
                  Background="#141419"
                  BorderBrush="#4B3A86"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="6"
                  ClipToBounds="True">
            <DataGrid
                ItemsSource="{Binding Results}"
                SelectedItem="{Binding Selected, Mode=TwoWay}"
                AutoGenerateColumns="False"
                HeadersVisibility="Column"
                GridLinesVisibility="All"
                CanUserSortColumns="True"
                CanUserResizeColumns="True"
                CanUserReorderColumns="True"
                IsReadOnly="True"
                RowHeight="36"
                Background="#141419">

              <DataGrid.Columns>
                <DataGridTextColumn Header="Confirmation" Width="*"
                                    Binding="{Binding ConfirmationCode}"
                                    SortMemberPath="ConfirmationCode"/>

                <DataGridTextColumn Header="First Name" Width="*"
                                    Binding="{Binding GuestFirstName}"
                                    SortMemberPath="GuestFirstName"/>
                <DataGridTextColumn Header="Last Name" Width="*"
                                    Binding="{Binding GuestLastName}"
                                    SortMemberPath="GuestLastName"/>

                <DataGridTextColumn Header="Room" Width="*"
                                    Binding="{Binding RoomNumber}"
                                    SortMemberPath="RoomNumber"/>

                <DataGridTextColumn Header="Room Type" Width="*"
                                    Binding="{Binding RoomType}"
                                    SortMemberPath="RoomType"/>

                <DataGridTextColumn Header="Check-In" Width="*"
                                    Binding="{Binding CheckIn}"
                                    SortMemberPath="CheckIn"/>
                <DataGridTextColumn Header="Check-Out" Width="*"
                                    Binding="{Binding CheckOut}"
                                    SortMemberPath="CheckOut"/>

                <DataGridTemplateColumn Header="Status" Width="*">
                  <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                      <Border CornerRadius="12"
                              Padding="10,5"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Background="{Binding Status, Converter={StaticResource StatusBrushConverter}, ConverterParameter=bg}">
                        <TextBlock Text="{Binding Status}"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{Binding Status, Converter={StaticResource StatusBrushConverter}, ConverterParameter=fg}"/>
                      </Border>
                    </DataTemplate>
                  </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
              </DataGrid.Columns>
            </DataGrid>
          </Border>
        </Grid>
      </Border>

      <!-- Empty state panel - shown when no booking is selected -->
      <Border Grid.Column="2"
              CornerRadius="8"
              BorderBrush="#3F2F73"
              BorderThickness="1"
              Padding="16"
              Background="#18181E"
              IsVisible="{Binding Selected, Converter={x:Static ObjectConverters.IsNull}}">
        <StackPanel VerticalAlignment="Center" Spacing="16">
          <Viewbox Width="80" Height="80" Opacity="0.3">
            <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M11,16.5L18,9.5L16.59,8.09L11,13.67L7.91,10.59L6.5,12L11,16.5Z"
                  Fill="#9C27B0"
                  Stretch="Uniform"/>
          </Viewbox>
          <TextBlock Text="No Booking Selected"
                     FontSize="18"
                     FontWeight="SemiBold"
                     Foreground="#E8E8F0"
                     HorizontalAlignment="Center"/>
          <TextBlock Text="Select a guest check-in row from Today's Activity to view and edit the booking details"
                     FontSize="13"
                     Foreground="#CFCFEA"
                     Opacity="0.8"
                     TextAlignment="Center"
                     TextWrapping="Wrap"
                     MaxWidth="250"
                     LineHeight="20"/>
        </StackPanel>
      </Border>

      <!-- Actions panel - shown when booking is selected -->
      <Border Grid.Column="2"
              CornerRadius="8"
              BorderBrush="#3F2F73"
              BorderThickness="1"
              Padding="16"
              Background="#18181E"
              IsVisible="{Binding Selected, Converter={x:Static ObjectConverters.IsNotNull}}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,8,16">
          <StackPanel Spacing="16" Margin="0,0,0,8">
            <TextBlock Text="Booking Actions"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#E8E8F0"/>

            <Border BorderBrush="#3F2F73"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12"
                    Background="#2A2A33"
                    IsVisible="{Binding Selected, Converter={x:Static ObjectConverters.IsNotNull}}">
              <StackPanel Spacing="6">
                <TextBlock Text="{Binding Selected.GuestName}"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="#E8E8F0"/>
                <TextBlock Text="{Binding Selected.ConfirmationCode, StringFormat='Code: {0}'}"
                           Opacity="0.8"
                           FontSize="12"/>
                <TextBlock Text="{Binding Selected.RoomNumber, StringFormat='Room: {0}'}"
                           Opacity="0.8"
                           FontSize="12"/>
                <TextBlock Text="{Binding Selected.Status, StringFormat='Status: {0}'}"
                           Opacity="0.8"
                           FontSize="12"/>
              </StackPanel>
            </Border>

            <!-- Edit Booking Details Section -->
            <Border BorderBrush="#4B3A86"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12"
                    Background="#1E1E28"
                    IsVisible="{Binding Selected, Converter={x:Static ObjectConverters.IsNotNull}}">
              <StackPanel Spacing="12">
                <TextBlock Text="Edit Booking Details"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="#E8E8F0"
                           Margin="0,0,0,4"/>

                <!-- First Name -->
                <StackPanel Spacing="4">
                  <TextBlock Text="First Name"
                             FontSize="12"
                             Opacity="0.8"
                             Foreground="#CFCFEA"/>
                  <TextBox Text="{Binding EditFirstName}"
                           Watermark="Enter first name"
                           IsEnabled="{Binding !IsBusy}"/>
                </StackPanel>

                <!-- Last Name -->
                <StackPanel Spacing="4">
                  <TextBlock Text="Last Name"
                             FontSize="12"
                             Opacity="0.8"
                             Foreground="#CFCFEA"/>
                  <TextBox Text="{Binding EditLastName}"
                           Watermark="Enter last name"
                           IsEnabled="{Binding !IsBusy}"/>
                </StackPanel>

                <!-- Assign Room -->
                <StackPanel Spacing="4">
                  <TextBlock Text="Assign Room"
                             FontSize="12"
                             Opacity="0.8"
                             Foreground="#CFCFEA"/>
                  <TextBox Text="{Binding RoomNumberInput}"
                           Watermark="Room number"
                           IsEnabled="{Binding !IsBusy}"/>
                  <TextBlock Text="{Binding AssignRoomError}"
                             Foreground="#ff7777"
                             FontSize="11"
                             TextWrapping="Wrap"
                             IsVisible="{Binding AssignRoomError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                  <Button Content="Assign Room"
                          Command="{Binding AssignRoomCommand}"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Center"
                          CornerRadius="6"
                          Padding="8,6"/>
                </StackPanel>

                <!-- Room Type -->
                <StackPanel Spacing="4">
                  <TextBlock Text="Room Type"
                             FontSize="12"
                             Opacity="0.8"
                             Foreground="#CFCFEA"/>
                  <ComboBox ItemsSource="{Binding RoomTypes}"
                            SelectedItem="{Binding EditRoomType}"
                            PlaceholderText="Select room type"
                            IsEnabled="{Binding !IsBusy}"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Check-In Date -->
                <StackPanel Spacing="4">
                  <TextBlock Text="Check-In Date"
                             FontSize="12"
                             Opacity="0.8"
                             Foreground="#CFCFEA"/>
                  <CalendarDatePicker x:Name="CheckInDatePicker"
                                      SelectedDate="{Binding EditCheckInDate}"
                                      IsEnabled="{Binding !IsBusy}"
                                      HorizontalAlignment="Stretch"
                                      AttachedToVisualTree="OnDatePickerAttached"/>
                </StackPanel>

                <!-- Check-Out Date -->
                <StackPanel Spacing="4">
                  <TextBlock Text="Check-Out Date"
                             FontSize="12"
                             Opacity="0.8"
                             Foreground="#CFCFEA"/>
                  <CalendarDatePicker x:Name="CheckOutDatePicker"
                                      SelectedDate="{Binding EditCheckOutDate}"
                                      IsEnabled="{Binding !IsBusy}"
                                      HorizontalAlignment="Stretch"
                                      AttachedToVisualTree="OnDatePickerAttached"/>
                </StackPanel>

                <!-- Validation Error -->
                <TextBlock Text="{Binding ValidationError}"
                           Foreground="#ff7777"
                           FontSize="12"
                           TextWrapping="Wrap"
                           IsVisible="{Binding ValidationError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                <!-- Save Changes Button -->
                <Button Content="Save Changes"
                        Command="{Binding SaveChangesCommand}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        CornerRadius="6"
                        Background="#1976D2"
                        BorderBrush="#2196F3"
                        Padding="8,8"
                        Margin="0,4,0,0"/>
              </StackPanel>
            </Border>

            <Separator Background="#3F2F73"/>

            <StackPanel Spacing="10" Margin="0,0,0,24">
              <Button Content="Check In Guest"
                      Command="{Binding CheckInCommand}"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center"
                      CornerRadius="6"
                      Background="#2E7D32"
                      BorderBrush="#4CAF50"
                      Padding="12,12"
                      MinHeight="44"
                      Margin="0,0,0,2"/>

              <Button Content="Check Out Guest"
                      Command="{Binding CheckOutCommand}"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center"
                      CornerRadius="6"
                      Background="#D32F2F"
                      BorderBrush="#F44336"
                      Padding="12,12"
                      MinHeight="44"
                      Margin="0,0,0,2"/>
            </StackPanel>

            <TextBlock Text="{Binding StatusMessage}"
                       FontSize="12"
                       Opacity="0.9"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Foreground="#CFCFEA"
                       Margin="0,0,0,16"
                       IsVisible="{Binding StatusMessage, Converter={StaticResource HasText}}"/>
          </StackPanel>
        </ScrollViewer>
      </Border>
    </Grid>
  </Grid>
</UserControl>
