<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vms="clr-namespace:KeyCard.Desktop.ViewModels"
    xmlns:m="clr-namespace:KeyCard.Desktop.Models"
    x:Class="KeyCard.Desktop.Views.DashboardView"
    x:DataType="vms:DashboardViewModel">

	<StackPanel Margin="20" Spacing="8">
		<StackPanel Orientation="Horizontal" Spacing="8">
			<TextBlock Text="Dashboard" FontSize="20" FontWeight="SemiBold"/>
			<Button Content="Front Desk" Command="{Binding GoFrontDesk}"/>
			<Button Content="Housekeeping" Command="{Binding GoHousekeeping}"/>
		</StackPanel>

		<TextBlock Text="Today's Arrivals" FontWeight="SemiBold"/>

		<ListBox ItemsSource="{Binding TodayArrivals}">
			<ListBox.ItemTemplate>
				<DataTemplate x:DataType="m:Booking">
					<StackPanel Orientation="Horizontal" Spacing="12">
						<TextBlock Text="{Binding BookingId}" Width="120"/>
						<TextBlock Text="{Binding GuestName}" Width="220"/>
						<TextBlock Text="{Binding RoomNumber}" Width="80"/>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</StackPanel>
</UserControl>
