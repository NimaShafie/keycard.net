@page "/"
@inject IHttpClientFactory Http

<h1>KeyCard.NET — Guest Portal</h1>

<p>
    This is a minimal Blazor Server shell.
    <button @onclick="PingApi">Ping API</button>
</p>

@if (!string.IsNullOrWhiteSpace(_message))
{
    <pre>@_message</pre>
}

@code {
    private string? _message;
    private async Task PingApi()
    {
        var client = Http.CreateClient("api");
        _message = await client.GetStringAsync("/");
    }
}
