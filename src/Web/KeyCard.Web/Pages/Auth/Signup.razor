@page "/auth/signup"
@inject IHttpClientFactory Http
@inject NavigationManager Nav

<div class="min-h-screen flex items-center justify-center bg-slate-100 px-4">
    <div class="w-full max-w-md bg-white p-8 rounded-xl shadow">

        <h1 class="text-2xl font-bold mb-6 text-center">Create Account</h1>

        <div class="space-y-4">
            <input @bind="Name"
                   placeholder="Full name"
                   class="w-full px-4 py-2 border rounded-lg" />

            <input @bind="Email"
                   type="email"
                   placeholder="Email"
                   class="w-full px-4 py-2 border rounded-lg" />

            <input @bind="Password"
                   type="password"
                   placeholder="Password"
                   class="w-full px-4 py-2 border rounded-lg" />

            <button @onclick="SignupUser"
                    class="w-full bg-green-600 text-white py-2 rounded-lg hover:bg-green-700">
                Sign Up
            </button>

            <p class="text-center text-sm">
                Already have an account?
                <a href="/auth/login" class="text-blue-600 underline">Login</a>
            </p>
        </div>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="mt-4 text-red-500 text-center">@ErrorMessage</div>
        }
    </div>
</div>

@code {
    private string Name { get; set; }
    private string Email { get; set; }
    private string Password { get; set; }
    private string ErrorMessage { get; set; }

    private async Task SignupUser()
    {
        var client = Http.CreateClient("api");

        var body = new
        {
            fullName = Name,
            email = Email,
            password = Password
        };

        var response = await client.PostAsJsonAsync("/api/Auth/guest/signup", body);

        if (!response.IsSuccessStatusCode)
        {
            ErrorMessage = "Signup failed.";
            return;
        }

        Nav.NavigateTo("/auth/login");
    }
}
