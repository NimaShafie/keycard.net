@code {
    private string? _selectedRoom;
    private int _selectedPrice;

    private bool HasSelection => !string.IsNullOrEmpty(_selectedRoom);

    private void SelectRoom(string roomName, int price)
    {
        _selectedRoom = roomName;
        _selectedPrice = price;
    }

    private void SelectRegular() => SelectRoom("Regular Room", 129);
    private void SelectKing()    => SelectRoom("King Room", 189);
    private void SelectSuite()   => SelectRoom("Luxury Suite", 299);

    private string GetCardClasses(string roomName)
    {
        var baseClasses =
            "w-full text-left bg-white border rounded-2xl px-4 py-4 sm:px-5 sm:py-5 transition " +
            "hover:border-slate-400";

        if (_selectedRoom == roomName)
        {
            return baseClasses + " border-slate-900 ring-2 ring-slate-900/40";
        }

        return baseClasses + " border-slate-200";
    }

    private string ContinueButtonClasses =>
        "px-8 py-2 text-sm rounded-full font-medium " +
        (HasSelection
            ? "bg-slate-900 text-white hover:bg-black"
            : "bg-slate-200 text-slate-500 cursor-not-allowed");

    private void GoBack()
    {
        Nav.NavigateTo("/dates");
    }

    private void Continue()
    {
        if (!HasSelection)
            return;

        var url =
            $"/payment?room={Uri.EscapeDataString(_selectedRoom!)}" +
            $"&price={_selectedPrice}";

        Nav.NavigateTo(url);
    }
}
