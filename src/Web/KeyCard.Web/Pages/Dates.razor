@page "/dates"
@inject NavigationManager Nav

<div class="min-h-screen flex items-center justify-center bg-slate-50 px-4">
  <div class="w-full max-w-xl bg-white rounded-2xl shadow-lg p-8">

    <!-- Header -->
    <div class="flex flex-col items-center mb-6">
      <div class="w-12 h-12 rounded-full bg-slate-900 flex items-center justify-center text-white text-lg">
        🏨
      </div>
      <h1 class="mt-3 text-xl font-semibold">Book Your Stay</h1>
      <p class="text-slate-500 text-sm">Select your dates</p>
    </div>

    <!-- Card Title -->
    <div class="mb-4">
      <h2 class="text-lg font-semibold text-slate-900">Select Your Dates</h2>
      <p class="text-sm text-slate-500">
        Choose your check-in and check-out dates
      </p>
    </div>

    <!-- Form -->
    <div class="space-y-4">
      <div>
        <label class="text-sm text-slate-700">Check-in Date</label>
        <input type="date"
               class="w-full mt-1 rounded-lg border border-slate-200 px-3 py-2 text-sm
                              focus:outline-none focus:ring-2 focus:ring-slate-900/70 focus:border-transparent"
               @bind="CheckIn"
               @bind:format="yyyy-MM-dd"/>
      </div>

      <div>
        <label class="text-sm text-slate-700">Check-out Date</label>
        <input type="date"
               class="w-full mt-1 rounded-lg border border-slate-200 px-3 py-2 text-sm
                              focus:outline-none focus:ring-2 focus:ring-slate-900/70 focus:border-transparent"
               @bind="CheckOut"
               @bind:format="yyyy-MM-dd"/>
      </div>

      <div>
        <label class="text-sm text-slate-700">Number of Guests</label>
        <select class="w-full mt-1 rounded-lg border border-slate-200 px-3 py-2 text-sm
                               focus:outline-none focus:ring-2 focus:ring-slate-900/70 focus:border-transparent"
                @bind="Guests">
          <option value="1">1 Guest</option>
          <option value="2">2 Guests</option>
          <option value="3">3 Guests</option>
          <option value="4">4 Guests</option>
        </select>
      </div>

      @if (!string.IsNullOrEmpty(ErrorMessage))
      {
        <div class="text-sm text-red-500">@ErrorMessage</div>
      }
    </div>

    <!-- Buttons -->
    <div class="flex gap-4 mt-6">
      <button type="button"
              class="flex-1 py-2 rounded-lg border border-slate-200 text-sm font-medium
                           hover:bg-slate-50"
              @onclick="GoBack">
        Back
      </button>
      <button type="button"
              class="flex-1 py-2 rounded-lg bg-slate-900 text-white text-sm font-medium
                           hover:bg-slate-800"
              @onclick="Continue">
        Continue
      </button>
    </div>

    <p class="mt-6 text-center text-xs text-slate-400">
      © 2025 Keycard Management. All rights reserved.
    </p>
  </div>
</div>

@code {
    private DateTime? CheckIn { get; set; }
    private DateTime? CheckOut { get; set; }
    private int Guests { get; set; } = 2;

    private string? ErrorMessage { get; set; }

    private void GoBack()
    {
        Nav.NavigateTo("/auth/login");
    }

    private void Continue()
    {
        ErrorMessage = null;

        if (CheckIn is null || CheckOut is null)
        {
            ErrorMessage = "Please select both check-in and check-out dates.";
            return;
        }

        if (CheckOut <= CheckIn)
        {
            ErrorMessage = "Check-out date must be after check-in date.";
            return;
        }

        // select rooms page
        Nav.NavigateTo("/rooms");
    }
}
